# ===========================================
# FB-Discord Relay - Production Configuration
# ===========================================
# Copy this file to .env.prod and fill in your values

# Domain (required for HTTPS)
DOMAIN=relay.yourdomain.com

# Database (change the password!)
POSTGRES_USER=relay
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=relay

# Server
PORT=3000

# Meta / Facebook
META_VERIFY_TOKEN=generate_a_random_string_here
META_APP_SECRET=your_facebook_app_secret
META_GRAPH_VERSION=v24.0
META_PAGE_ID=your_facebook_page_id
META_PAGE_ACCESS_TOKEN=your_long_lived_page_access_token

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy
DISCORD_WEBHOOK_WAIT=true
DISCORD_DISCLAIMER=Not financial advice. Do your own research.
DISCORD_MENTION_ROLE_ID=your_discord_role_id

# Application
ALERTS_ENABLED=true
TRIGGER_TAG="#nofomo"

# Logging
LOG_LEVEL=info
